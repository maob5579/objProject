<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodFull.Views.RateRestaurantResult">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Get Emotions" Command="{Binding GetEmotionsCommand}"/>

            <Label Text="Select a restaurant" FontSize="Medium"/>

            <Picker Title="--Select--" ItemsSource="{Binding RestaurantList}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedRestaurant}" />

            <ActivityIndicator IsRunning="{Binding IsWaiting}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>